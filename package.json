{
  "name": "console-plugin-upgrade-planner",
  "version": "0.1.0",
  "description": "OpenShift Console Dynamic Plugin for operator lifecycle management and upgrade planning",
  "main": "dist/plugin-entry.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/openshift/console-plugin-upgrade-planner"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn build:backend && yarn build:frontend",
    "build:backend": "tsc -p src/backend/tsconfig.json",
    "build:frontend": "NODE_ENV=production webpack --config webpack.config.ts",
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:backend": "nodemon --watch src/backend --exec ts-node src/backend/server.ts",
    "dev:frontend": "webpack serve --config webpack.config.ts",
    "start": "node dist/backend/server.js",
    "lint": "eslint --ext .ts,.tsx src/",
    "lint:fix": "eslint --ext .ts,.tsx src/ --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.21.0",
    "@openshift-console/dynamic-plugin-sdk": "^1.1.0",
    "@openshift-console/dynamic-plugin-sdk-webpack": "^1.1.0",
    "@patternfly/react-core": "^5.2.0",
    "@patternfly/react-table": "^5.2.0",
    "@patternfly/react-icons": "^5.2.0",
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.0",
    "pino": "^8.19.0",
    "pino-http": "^9.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "5.3.x",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/react-router-dom": "^5.3.3",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "consolePlugin": {
    "name": "upgrade-planner",
    "version": "0.1.0",
    "displayName": "Upgrade Planner",
    "description": "Operator lifecycle management and upgrade planning for OpenShift",
    "exposedModules": {
      "UpgradePlannerPage": "./src/frontend/components/UpgradePlannerPage",
      "LifecycleDashboard": "./src/frontend/components/LifecycleDashboard",
      "OperatorDetailPage": "./src/frontend/components/OperatorDetailPage"
    },
    "dependencies": {
      "@console/pluginAPI": "*"
    }
  }
}
